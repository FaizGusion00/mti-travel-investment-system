<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base secure network configuration - enforce HTTPS by default -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust the pre-installed system CAs -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Enhanced security for MTI API domains with certificate pinning -->
    <domain-config>
        <!-- Pin the certificates for production API domains -->
        <domain includeSubdomains="true">metatravel.ai</domain>
        <domain includeSubdomains="true">app.metatravel.ai</domain>
        <domain includeSubdomains="true">panel.metatravel.ai</domain>
        <domain includeSubdomains="true">register.metatravel.ai</domain>
        
        <!-- Set reasonable timeouts for certificate verification -->
        <trust-anchors>
            <certificates src="system" />
            <!-- Add certificate pinning in production by uncommenting and adding your cert hash -->
            <!--
            <pins-digest algorithm="SHA-256">
                <pin-set expiration="2026-01-01">
                    Replace with your actual certificate pin below:
                    <pin digest="YOUR_CERT_PIN_HERE" />
                </pin-set>
            </pins-digest>
            -->
        </trust-anchors>
    </domain-config>
    
    <!-- Allow localhost connections for development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android Emulator localhost -->
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
    
    <!-- Debug only overrides - only active in debug builds -->
    <debug-overrides>
        <trust-anchors>
            <!-- Trust user-added CAs for debugging while maintaining secure defaults -->
            <certificates src="user" />
            <certificates src="system" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>
